<!DOCTYPE html>
<html lang="pt-br">
    <head>
        {% include "head.njk" ignore missing %}
        <link rel="stylesheet" href="/assets/css/galeria.css" />
    </head>
    <body {% if site.crt %}class="crt"{% endif %}>
        <div>
            {% include "header.njk" ignore missing %}
            <main>
                {% if imgPrincipal %}
                    <figure>
                        <img src="{{ imgPrincipal }}" class="imgPrincipal" alt="" />
                        {% if imgPrincipalCaption %}<figcaption>{{ imgPrincipalCaption }}</figcaption>{% endif %}
                    </figure>
                {% endif %}
                <h1 id="tituloPagina">{{ title }}</h1>
                {% if subtitulo %}<h2 id="subtitulo">{{ subtitulo | safe }}</h2>{% endif %}
                {% include "toc.njk" ignore missing %}
                <div class="gallery">
                    {% for item in dataset %}
                        <div class="gallery-item">
                            <div class="gallery-content">
                                <div class="gallery-thumb">
                                    {% set datasetKey = page.fileSlug %}
                                    {% set itemUrl = galeriaCatalog.urlsByDataset[datasetKey][loop.index0] if galeriaCatalog and galeriaCatalog.urlsByDataset and galeriaCatalog.urlsByDataset[datasetKey] else null %}
                                    {% if itemUrl %}<a href="{{ itemUrl }}" class="gallery-item-link">{% endif %}
                                        <img src="{{ item.medias[0].src }}"
                                             alt="{{ item.titulo | escape }}"
                                             data-hover-original="true" />
                                    {% if itemUrl %}</a>{% endif %}
                                </div>
                                <div class="gallery-tags">
                                    {% for tag in item.tags %}<span class="gallery-tag" data-tag="{{ tag }}">#{{ tag }}</span>{% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {{ content | safe }}
                {% if not noBacklinks %}
                    {% include "backlinks.njk" ignore missing %}
                {% endif %}
                {% include "postFooter.njk" %}
            </main>
        </div>
        {% include "footer.njk" ignore missing %}
        {% include "scripts_bottom.njk" ignore missing %}
    </body>
</html>
